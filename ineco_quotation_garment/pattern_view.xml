                    <field name="name" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <field name="garment_order_no" />
                    <field name="user_id" />
                    <field name="product_name" />
                    <field name="order_qty" />
                    <field name="saleorder_id" invisible="1" />
                    <field name="partner_id" />
                    <field name="employee_id" />
                    <field name="date_start" />
                    <field name="date_expected" invisible="1" />
                    <field name="sampling_date_process1_finish" string="Cut Finish" />
                    <field name="date_finish_planned" />
                    <field name="pattern_group_id" />
                    <field name="date_finish" invisible="1" />
                    <field name="late" invisible="1"/>
                    <field name="attachment_count" />
                    <field name="state" />
                </tree>
            </field>
        </record>		
 
        <record id="view_ineco_pattern_form" model="ir.ui.view">
            <field name="name">ineco.pattern.form</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <form string="Pattern" version="7.0">
                	<header>
                		<button name="button_ready" string="Ready" states="draft,used,damage" type="object" class="oe_highlight" />
                		<button name="button_used" string="Used" states="ready" type="object" class="oe_highlight"/>
                		<button name="button_damage" string="Damage" states="used,ready" type="object" class="oe_highlight"/>
                		<button name="button_setdraft" string="Set Draft" states="userd,ready,damange" type="object" groups="base.group_erp_manager" />
	                    <field name="state" widget="statusbar" statusbar_visible="ready,used,damage" />
                	</header>
                	<sheet>
						<field name="image" widget="image" class="oe_avatar oe_left" />
						<div class="oe_title">
							<div class="oe_edit_only">
								<label for="name" string="Product Name" />
							</div>
							<h1>
								<field name="name" />
							</h1>
							<h2>
								<field name="pattern_group_id" required="1" />
							</h2>
						</div>
                		<group>
                			<group>
			                    <!-- <field name="name" /> -->
			                    <field name="saleorder_id" />
			                    <field name="partner_id" />
			                    <field name="employee_id" required="1" />
			                    <field name="last_updated" />
			                    <field name="rev_no" />
			                    <field name="remark2" />
                			</group>
                			<group>
			                    <field name="product_id" />
			                    <field name="garment_order_no" />
			                    <field name="garment_order_no_org" />
			                    <field name="sampling_order_no" />
			                    <field name="product_type_id" required="1" />
			                    <field name="location_id" required="1" />
			                    <field name="user_id" />
			                    <field name="is_cancel" />
			                    <field name="active" groups="base.group_erp_manager" />
                			</group>

                				<notebook colspan="4">
                					<page string="Component">
                						<group>
                							<group>
                								<field name="gender_ids" widget="many2many_tags" class="oe_inline" />
                								<button name="button_generate" type="object" string="Generate" />
                							</group>
                							<group>
                								<field name="size_ids" widget="many2many_tags" class="oe_inline" />
                							</group>
                							<group colspan="4">
												<!-- <button name="%(action_ineco_production_copypattern)d" string="Copy Pattern" type="action" icon="gtk-find"/> -->
												<group>
													<field name="pattern_id" />
												</group>
												<group>
													<button name="button_master_pattern" string="Find Master Pattern" 
														type="object" icon="gtk-find" attrs="{'invisible': [('garment_order_no_org', '=', False)]}"  />
													<button name="button_pattern_copy" string="Copy Pattern" type="object" icon="gtk-find"/>
												</group>
												<newline />
                								<field name="component_ids" nolabel="1" colspan="4" >
                									<tree string="Components" editable="top">
                										<field name="seq" />
                										<field name="type_id" />
                										<field name="last_updated" />
                									</tree>
                								</field>
                								<newline />
                								<field name="note" colspan="4" />
                							</group>
                						</group>
                					</page>
                					<page string="Line">
                						<field name="line_ids" nolabel="1">
                							<tree string="Line" editable="top">
                								<field name="name" />
                								<field name="type_id" />
                								<field name="gender_id" />
                								<field name="size_id" />
                							</tree>
                							<form string="Lines">
                								<field name="name" />
                								<field name="type_id" />
                								<field name="gender_id" />
                								<field name="size_id" />
                							</form>
                						</field>
                					</page>
                					<page string="Log">
                						<field name="log_ids" nolabel="1" readonly="1">
                							<tree string="Log">
                								<field name="type" />
                								<field name="user_id" />
                								<field name="last_updated" />
                							</tree>
                						</field>
                					</page>
                					<page string="Images">
                        				<field name="multi_images" widget="image_multi"/>
                    				</page>
                    				<page string="Sampling Date">
                    					<group>
                    						<group string="Pattern">
                    							<field name="sampling_date_start_planned" />
                    							<field name="sampling_date_finish_planned" />
                    						</group>
                    						<group string="Mark">
                    							<field name="sampling_date_mark_start" />
                    							<field name="sampling_date_mark_finish" />
                    							<field name="sampling_marker" />
                    						</group>
                    						<group string="Cut">
                    							<field name="sampling_date_process1_start" />
                    							<field name="sampling_date_process1_finish" />
                    							<field name="sampling_process1_employee" />
                    						</group>
                    						<group string="Sew">
                    							<field name="sampling_date_process2_start" />
                    							<field name="sampling_date_process2_finish" />
                    							<field name="sampling_process2_employee" />
                    						</group>
                    						<group string="Planned">
                    							<field name="sampling_date_start" readonly="1" />
                    							<field name="sampling_date_finish" readonly="1"/>
                    						</group>
                    					</group>
                    				</page>
                    				<page string="Garment Date">
                    					<group>
                    						<group string="Pattern">
                    							<field name="date_start_planned" />
                    							<field name="date_finish_planned" />
                    						</group>
                    						<group string="Mark">
                    							<field name="date_mark_start" />
                    							<field name="date_mark_finish" />
                    							<field name="marker" />
                    						</group>
                    						<group string="Planned">
                    							<field name="date_start" readonly="1" />
                    							<field name="date_finish" readonly="1"/>
                    							<field name="date_expected" readonly="1"/>
                    						</group>
                    					</group>
                    				</page>
                    				<page string="Tickets">
                    					<button name="button_component" type="object" string="Calculate" />
                    					<field name="ticket_ids">
                    						<tree string="Tickets" editable="top">
                    							<field name="name" invisible="1"/>
                    							<field name="production_id" />
                    							<field name="gender_id" />
                    							<field name="color_id" />
                    							<field name="size_id" />
                    							<field name="note" />
                    							<field name="quantity" />
                    							<button name="%(action_production_ticket_split)d" string="Split" icon="gtk-go-forward" type="action" />
                    							<field name="machine_id" domain="[('workcenter_id.name','=','แผนกตัด')]" />
                    						</tree>
                    					</field>
                    				</page>
                    				<page string="Collar" groups="base.group_garment_collar">
                                        <group>
                                            <group>
                                                <field name="date_collar_start"/>
                                            </group>
                                            <group>
                                                <field name="date_collar_finish"/>
                                            </group>
                                        </group>
                                        <field name="collar_ids" nolabel="1">
                                            <tree string="Collars" >
                                                <field name="machine_collar_id"/>
                                                <field name="employee_collar_id"/>
                                                <field name="date_collar_start"/>
                                                <field name="date_collar_finish"/>
                                                <field name="quantity" />
                                            </tree>
                                            <form string="Collar">
                                                <field name="machine_collar_id"/>
                                                <field name="employee_collar_id"/>
                                                <field name="date_collar_start"/>
                                                <field name="date_collar_finish"/>
                                                <field name="quantity" />
                                                <notebook colspan="4">
                                                    <page string="Employee">
                                                        <field name="employee_ids" nolabel="1">
                                                            <tree string="Employee" editable="top">
                                                                <field name="employee_collar_id" string="พนักงาน" />
                                                                <field name="p1" string="เลาะ" />
                                                                <field name="p2" string="ดึง" />
                                                                <field name="p3" string="รีด" />
                                                                <field name="date_collar_start" />
                                                                <field name="date_collar_finish" />
                                                                <field name="quantity" />
                                                            </tree>
                                                        </field>
                                                    </page>
                                                </notebook>
                                            </form>
                                        </field>
                    				</page>
                                    <page string="Sleeve" groups="base.group_garment_collar">
                                        <field name="sleeve_ids" nolabel="1">
                                            <tree string="Sleeve">
                                                <field name="machine_sleeve_id"/>
                                                <field name="employee_sleeve_id"/>
                                                <field name="date_sleeve_start"/>
                                                <field name="date_sleeve_finish"/>
                                                <field name="quantity" />
                                            </tree>
                                            <form string="Sleeve">
                                                <field name="machine_sleeve_id"/>
                                                <field name="employee_sleeve_id"/>
                                                <field name="date_sleeve_start"/>
                                                <field name="date_sleeve_finish"/>
                                                <field name="quantity" />
                                                <notebook colspan="4">
                                                    <page string="Employee">
                                                        <field name="employee_ids" nolabel="1">
                                                            <tree string="Employee" editable="top">
                                                                <field name="employee_sleeve_id" string="พนักงาน" />
                                                                <field name="p1" string="เลาะ" />
                                                                <field name="p2" string="ดึง"/>
                                                                <field name="p3" string="รีด"/>
                                                                <field name="date_sleeve_start" />
                                                                <field name="date_sleeve_finish" />
                                                                <field name="quantity" />
                                                            </tree>
                                                        </field>
                                                    </page>
                                                </notebook>
                                            </form>
                                        </field>
                                    </page>
                				</notebook>              				
                		</group>
                	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>	

        <record model='ir.ui.view' id='view_ineco_pattern_kanban'>
            <field name="name">ineco.pattern.brandkanban</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="image" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <field name="pattern_group_id" />
                    <templates>
                        <t t-name="kanban-box">
                        	<div class="oe_module_vignette">
                                <a type="open" href="#" class="oe_kanban_action oe_kanban_action_a">
                                    <img t-att-src="kanban_image('ineco.pattern', 'image_small', record.id.value)"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <t t-if="record.name.raw_value"><field name="name"/></t>
                                        </li>
                                        <li>
                                            <t t-if="record.product_type_id.raw_value"><field name="product_type_id"/></t>
                                        </li>
                                        <li>
                                            <t t-if="record.pattern_group_id.raw_value"><field name="pattern_group_id"/></t>
                                        </li>
                                    </ul>
                                    
                               </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

		<!--
			('sale_product_id','not in', [647,648,615,2190,603,604,2425,2286,2287,2461,2283,2282,2285,2291,2289,2288,2284,3903])]"   
		 -->
		 
        <record id="view_ineco_pattern_filter" model="ir.ui.view">
            <field name="name">ineco.pattern.filter</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <search string="Pattern">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <field name="garment_order_no" />
                    <field name="saleorder_id" />
                    <field name="partner_id" />
                    <field name="employee_id" />
                    <field name="pattern_group_id" />
                    <field name="state" />
                    <field name="sampling_date_process1_finish" string="Cut Finish" />
                    <field name="collar_day" string="Day of Collar" />
                    <field name="employee_collar_id" string="Employee's Collar" />
                    <field name="machine_collar_id" string="Machine's Collar" />
                    <field name="date_collar_finish" string="Collar Finish" />
                    <filter name="todo" icon="terp-dolar_ok!" string="To Do" domain="[('state','=','draft'),
                    	('date_finish_planned','=',False),('is_cancel','=',False),
                    	('sale_product_id.pattern','!=',False)]" />
                    <filter name="cancel" icon="terp-dolar_ok!" string="Cancel" domain="[('is_cancel','=',True)]" />         
                    <filter icon="terp-check" name="attachment_count" string="No Attachment" domain="[('attachment_count', '=', False)]"/>
                    <filter name="collar" icon="terp-dolar_ok!" string="Collar" domain="['|',('date_collar_start','=',False), ('date_collar_finish','=',False),('date_collar_planned','!=',False)]" />
                    <filter name="collar_done" icon="terp-dolar_ok!" string="Collar Done" domain="[('date_collar_start','!=',False), ('date_collar_finish','!=',False)]" />
                  	<group expand="0" string="Group By...">
                        <filter name="by_product_type" string="Product Type" icon="terp-partner" domain="[]" context="{'group_by':'product_type_id'}"/>
                        <filter name="by_date_expected" string="Date Expected" icon="terp-partner" domain="[]" context="{'group_by':'date_expected'}"/>
                        <filter name="by_employee" string="Employee" icon="terp-partner" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter name="by_employee_collar" string="Employee Collar" icon="terp-partner" domain="[]" context="{'group_by':'employee_collar_id'}"/>
                        <filter name="by_machine_collar" string="Machine Collar" icon="terp-partner" domain="[]" context="{'group_by':'machine_collar_id'}"/>
