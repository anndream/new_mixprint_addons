        <record id="view_ineco_pattern_process_form" model="ir.ui.view">
            <field name="name">ineco.pattern.process.form</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <form string="Pattern" version="7.0">
                	<header>
	                    <field name="state" widget="statusbar" statusbar_visible="ready,used,damage" />
                	</header>
                	<sheet>
						<field name="image" widget="image" class="oe_avatar oe_left" />
						<div class="oe_title">
							<div class="oe_edit_only">
								<label for="name" string="Product Name" />
							</div>
							<h1>
								<field name="name" readonly="1" />
							</h1>
						</div>
                		<group>
                			<group>
			                    <!-- <field name="name" /> -->
			                    <field name="saleorder_id" readonly="1"/>
			                    <field name="partner_id" readonly="1"/>
			                    <field name="employee_id" readonly="1"/>
			                    <field name="last_updated" readonly="1"/>
			                    <field name="rev_no" readonly="1"/>
			                    <field name="remark2" readonly="1"/>
                			</group>
                			<group>
			                    <field name="product_id" readonly="1"/>
			                    <field name="garment_order_no" readonly="1"/>
			                    <field name="garment_order_no_org" readonly="1"/>
			                    <field name="sampling_order_no" readonly="1"/>
			                    <field name="product_type_id" readonly="1" />
			                    <field name="location_id" readonly="1" />
			                    <field name="user_id" readonly="1"/>
			                    <field name="is_cancel" readonly="1"/>
			                    <field name="active" groups="base.group_erp_manager" />
                			</group>
                			<notebook colspan="4">
                				<page string="Process">
                					<field name="process_ids" context="{'lines': process_ids}">
                						<tree string="Processes">
                							<field name="sequence" />
                							<field name="process_id" />
                							<field name="name" />
                							<field name="cycle_time" />
                							<field name="cost" />
                							<field name="attachments" />
                						</tree>
                						<form string="Process" version="7.0">
                							<group>
                								<group>
		                							<field name="sequence" />
		                							<field name="process_id" />
		                							<field name="name" />
                								</group>
                								<group>
		                							<field name="cycle_time" />
		                							<field name="cost" />
		                							<field name="needle_length" />
		                							<field name="level" />
                								</group>
	                							<notebook colspan="4">
	                								<page string="Images">
	                									<field name="image_multi" widget="image_multi" />
	                								</page>
	                								<page string="Attachment">
	                									<field name="attachments" context="{'default_type':'binary'}">
	                										<tree string="Attachment">
	                											<field name="name" />
	                										</tree>
	                										<form string="Attachment" version="7.0">
	                											<group>	
	                												<group>
			                											<field name="type" invisible="1" />
			                											<field name="name" />
			                											<field name="db_datas" />
	                												</group>
	                											</group>
	                										</form>
	                									</field>
	                								</page>	   
	                								 
	                								<page string="Accessory">
	                									<field name="product_ids">
	                										<tree string="Accesstory" editable="top">
	                											<field name="product_id" />
	                											<field name="quantity" />
	                										</tree>
	                									</field>
	                								</page>            								
	                							</notebook>
                							</group>
                						</form>
                					</field>
                    			</page>
                			</notebook>              				
                		</group>
                	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>	

