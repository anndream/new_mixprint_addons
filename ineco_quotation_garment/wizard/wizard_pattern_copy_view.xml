<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="view_ineco_production_copypattern_form" model="ir.ui.view">
            <field name="name">ineco.production.copypattern.form</field>
            <field name="model">ineco.production.copypattern</field>
            <field name="arch" type="xml">
                <form string="Copy Pattern" version="7.0">
                	<group>
                		<group>
                			<field name="pattern_id" />
                		</group>
                	</group>
                    <footer>
                        <button string="Update" name="update_data" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_ineco_production_copypattern" model="ir.actions.act_window">
            <field name="name">Copy Pattern</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ineco.production.copypattern</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>